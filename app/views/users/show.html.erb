

<h1>User info</h1>

<%= image_tag @user.get_profile_image(100, 100) %>
<h3>name : <%= @user.name %></h3>
<h3>introduction : <%= @user.introduction %></h3>

<%= link_to 'Edit profile', edit_user_path(@user) %>

<h1>New Book</h1>

<%= form_with model:@new_book, url:books_path, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %><br>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>Title : <%= link_to book.title, "/books/#{book.id}" %></td>
        <td>Opinion : <%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>

