<h1>Editing Book</h1>

<%= render 'layouts/errors', obj:@book %>

<%= form_with model:@book, url: book_path, method: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :opinion %>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show', book_path(@book.id) %>
<%= link_to 'Back', books_path %>