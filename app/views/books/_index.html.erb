<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <% unless book.nil? %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
              <%= image_tag book.user.get_profile_image(75, 75) %>
            <% end %>
          </td>
          <td><%= link_to book.title, "/books/#{book.id}" %></td>
          <td><%= book.opinion %></td>
          <td id="favorite_<%= book.id %>">
            <%= render 'favorites/favorite', book:book %>
          </td>
          <td><%= render 'book_comments/comments_count', book:book %></td>
          <td>
            <% if book.view_count.present? %>
              閲覧数: <%= book.view_count %>
            <% else %>
              閲覧数: 0
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>