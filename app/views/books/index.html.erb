<%= flash[:notice] %>

<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %> errors prohibited this obj from being saved.
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'template', new_book: @new_book %>

<h1>Book detail</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <% unless book.nil? %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(50, 50) %></td>
          <td><%= link_to book.title, "/books/#{book.id}" %></td>
          <td><%= book.opinion %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

