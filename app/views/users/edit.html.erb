<div class="container">
  <div class="row m-3">
    <div class="col-xl-6 col-lg-8 col-md-10 col-11 mx-auto p-0">
      <div class="row">
        <h2>User info</h2>
      </div>

      <div class="row">
        <% if @user.errors.any? %>
          <strong><%= @user.errors.count %> errors prohibited this obj from being saved.</strong>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
          
      <div class="row">
        <div class="col-11">
          <%= form_with model:@user do |f| %>

            <div class="row">
              <div class="form-group col-12">
                <label for="inputName">Name</label>
                <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group col">
                <label for="inputImage">Image</label>
                <%= f.file_field :profile_image, pleceholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group col">
                <label for="inputIntroduction">Introduction</label>
                <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介", class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group col">
                <%= f.submit 'Update User', class:'d-grit gap-2 btn btn-secondary mt-1' %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>